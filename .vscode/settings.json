{
    "editor.formatOnSave": true,
    // 기본 포매터를 clang-format으로
    "[cpp]": {
        "editor.defaultFormatter": "xaver.clang-format"
    },
    "[c]": {
        "editor.defaultFormatter": "xaver.clang-format"
    },
    // clang-format 경로 (시스템 PATH에 없으면 직접 지정)
    "clang-format.executable": "clang-format",
    // 사용할 스타일 (Google, LLVM, Chromium, Mozilla, WebKit, Microsoft, file)
    "clang-format.style": "Google",
  "files.associations": {
    "thread.h": "c",
    "optional": "c",
    "system_error": "c",
    "array": "c",
    "functional": "c",
    "tuple": "c",
    "type_traits": "c",
    "utility": "c",
    "synch.h": "c",
    "gdt.h": "c",
    "*.inc": "c",
    "exception": "c",
    "memory_resource": "c",
    "iosfwd": "c",
    "new": "c",
    "ostream": "c",
    "stop_token": "c",
    "streambuf": "c",
    "cstdlib": "c",
    "atomic": "c",
    "chrono": "c",
    "cstdint": "c",
    "random": "c",
    "string.h": "c"
  }
}